doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/style.css")
        title Noom
    body 
        header
            h1 Noom
        main
            div#welcome 
                form#form(action="#" method="post")
                    input(type="text" placeholder="choose a room" required)
                    button(type="submit") Join
                h4 Open Rooms:
                ul#rooms
            div#mainContainer
                div#call 
                    div#myStream
                        video#myFace(autoplay muted playsinline width="400", height="400")
                        // playsinline is used to play the video in the same page
                        div#controls
                            button#mute Mute
                            button#camera Turn Camera Off
                        select#cameras
                    div#peerStream
                        video#peerFace(autoplay playsinline width="400", height="400")                
                
                div#chatContainer
                    ul#messages
                    form#chatForm(action="#" method="post")
                        input(type="text" placeholder="type a message" required)
                        button(type="submit") Send
                        

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")
        